@model WorkshopApp.Models.Enrollment

@{
    ViewData["Title"] = "Edit";
}

<h1>Промени</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId" disabled></select>
                <input type="hidden" asp-for="StudentId" />
            </div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId" disabled></select>
                <input type="hidden" asp-for="CourseId" />
            </div>

            
            <div class="form-group">
                <label asp-for="Semester" class="control-label"></label>
                <input asp-for="Semester" class="form-control" readonly />
                <input type="hidden" asp-for="Semester" />
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" readonly />
                <input type="hidden" asp-for="Year" />
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
            </div>

           
            <div class="form-group">
                <label>Проект</label>
                @if (!string.IsNullOrEmpty(Model.ProjectUrl))
                {
                    <div>
                        <a href="@("/projects/" + Model.ProjectUrl)" target="_blank">@Model.ProjectUrl</a>
                    </div>
                }
            </div>

           
            <div class="form-group">
                <label>Семинарска</label>
                @if (!string.IsNullOrEmpty(Model.SeminalUrl))
                {
                    <div>
                        <a href="@("/projects/" + Model.SeminalUrl)" target="_blank">@Model.SeminalUrl</a>
                    </div>
                }
            </div>

           
            <div class="form-group">
                <label asp-for="ExamPoints" class="control-label"></label>
                <input asp-for="ExamPoints" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SeminalPoints" class="control-label"></label>
                <input asp-for="SeminalPoints" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProjectPoints" class="control-label"></label>
                <input asp-for="ProjectPoints" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AdditionalPoints" class="control-label"></label>
                <input asp-for="AdditionalPoints" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FinishDate" class="control-label"></label>
                <input asp-for="FinishDate" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Зачувај" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад кон листата</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
